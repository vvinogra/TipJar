<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.TipJar.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <style name="TextAppearance.TipJar.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <style name="TextAppearance.TipJar.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">42sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <style name="TextAppearance.TipJar.Headline3.BigCircularButton">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.TipJar.BigCircularButton" parent="ShapeAppearanceOverlay.Material3.Button" />

    <style name="Widget.TipJar.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TipJar.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Widget.TipJar.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.TipJar.Button</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TipJar.Button</item>
    </style>

    <style name="TextAppearance.TipJar.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="fontFamily">@font/sf_pro_display_heavy</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.TipJar.Button" parent="">
        <item name="colorOnPrimary">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/colorControlHighlightLight</item>
    </style>

    <style name="ShapeAppearanceOverlay.TipJar.TextInputLayout.OutlinedBox" parent="" >
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TipJar.Button" parent="" >
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TipJar.ImageView" parent="" >
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TipJar.CardView" parent="" >
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Widget.TipJar.OutlinedCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:button">@drawable/outline_checkbox_button</item>
        <item name="android:background">@drawable/selectable_item_background_24</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:theme">@style/ThemeOverlay.TipJar.CheckBox</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="ThemeOverlay.TipJar.CheckBox" parent="">
        <item name="android:colorBackground">@color/transparent</item>
        <item name="colorOnBackground">@color/outline_checkbox_color</item>
    </style>

    <style name="Widget.TipJar.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TipJar.RadioButton</item>
    </style>

    <style name="ThemeOverlay.TipJar.RadioButton" parent="">
        <item name="colorSecondary">@color/primaryColor</item>
    </style>
</resources>